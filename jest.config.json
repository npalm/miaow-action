{
  "transform": {
    "\\.[jt]sx?$": ["ts-jest", { "useESM": true }]
  },
  "moduleNameMapper": {
    "^(\\.\\.?\\/.+)\\.jsx?$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "coverageReporters": ["lcov", "text", "html"],
  "collectCoverageFrom": ["src/**/*.{ts,js,jsx}", "!src/**/*cli*.ts"],
  "testEnvironment": "node",
  "collectCoverage": true,
  "clearMocks": true,
  "moduleFileExtensions": ["js", "ts"],
  "verbose": true,
  "coverageThreshold": {
    "global": {
      "statements": 80,
      "branches": 80,
      "functions": 80,
      "lines": 80
    }
  }
}